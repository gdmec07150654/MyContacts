<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.mycontacts"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MyContactsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--增加号码录入的Activity-->
        <activity android:name=".AddContactsActivity"></activity>
        <!--修改号码录入的Activity-->
        <activity android:name=".UpdateContactsActivity"></activity>
        <!--查询号码录入的Activity-->
        <activity android:name=".ContactsMessageActivity"></activity>
        <!--添加导出手机电话簿所需权限-->
    </application>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
</manifest>